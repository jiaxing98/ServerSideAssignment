<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>aaa</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>UserSession.jsp</welcome-file>

	</welcome-file-list>

	<context-param>
		<param-name>Email</param-name>
		<param-value>technicalsupport@avi.com.my</param-value>
	</context-param>
	<context-param>
		<param-name>Phone</param-name>
		<param-value>603-4555555</param-value>
	</context-param>

	<error-page>
		<error-code>403</error-code>
		<location>/DeniedPrivilege.jsp</location>
	</error-page>
	<login-config>

		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/ErrorLogin.jsp</form-error-page>
		</form-login-config>
	</login-config>
	
	<security-role>
		<description />
		<role-name>user</role-name>
	</security-role>
	
	<security-role>
		<description />
		<role-name>wildfly-admin</role-name>
	</security-role>
	
	<security-role>
		<description />
		<role-name>admin</role-name>
	</security-role>
	
	<security-constraint>
		<display-name>AdminPage</display-name>
		<web-resource-collection>
			<web-resource-name>Database</web-resource-name>
			<description />
			<url-pattern>/OrderManagement.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>admindatabase</description>
			<role-name>wildfly-admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<display-name>UserPage</display-name>
		<web-resource-collection>
			<web-resource-name>Register</web-resource-name>
			<description />
			<url-pattern>/Register.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>userpage</description>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>